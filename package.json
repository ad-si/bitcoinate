{
  "name": "bitcoinate",
  "version": "0.2.2",
  "scripts": {
    "test": "npm run lint && npm run build && echo 'Open ./tests/index.html'",
    "lint": "eslint --ignore-pattern *.min.js .",
    "build": "jake --always-make --trace",
    "prepublish": "npm test"
